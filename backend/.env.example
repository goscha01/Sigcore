# Database Configuration (Supabase - Sigcore's own database)
# Get from: Supabase Dashboard > Settings > Database > Connection string > Session pooler
DATABASE_URL=postgresql://postgres.[PROJECT-REF]:[PASSWORD]@aws-0-[REGION].pooler.supabase.com:5432/postgres

# Encryption (generate with: node -e "console.log(require('crypto').randomBytes(32).toString('hex'))")
ENCRYPTION_KEY=your-32-character-encryption-key

# Server
PORT=3002
NODE_ENV=development

# Service-to-Service Auth
# Shared secret between Callio and Sigcore (generate with: node -e "console.log(require('crypto').randomBytes(32).toString('hex'))")
SIGCORE_SERVICE_KEY=your-sigcore-service-key

# CORS - Allow Callio backend to call Sigcore
CALLIO_BACKEND_URL=http://localhost:3001

# OpenPhone API
OPENPHONE_API_BASE_URL=https://api.openphone.com/v1

# Base URL for webhook URLs (your deployed Sigcore backend URL)
BASE_URL=http://localhost:3002

# Twilio Voice API (for browser-based calling)
# Get from: Twilio Console > Account > API Keys & Tokens
TWILIO_API_KEY=your-api-key-sid
TWILIO_API_SECRET=your-api-secret
# Get from: Twilio Console > Voice > TwiML Apps (create a new TwiML App)
TWILIO_TWIML_APP_SID=APxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx

# Twilio A2P 10DLC Campaign / Messaging Service
# The Messaging Service SID is stored per-workspace in the database (phone_number_pricing table).
# Configure via API: PUT /api/tenants/pricing { "messagingServiceSid": "MGxxx" }
